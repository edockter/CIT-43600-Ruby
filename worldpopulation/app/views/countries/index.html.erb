<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-6 col-md-offset-3 col-sm-12">
    <h1>All Countries</h1>
  </div>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3 col-sm-12">
    <table id="index-table" class="table table-responsive">
      <thead>
      </thead>
      <tbody>
        <% @countries.each do |country| %>
          <tr>
            <td><%= link_to country.name, country %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
