<p id="notice"><%= notice %></p>

  <% content_for(:pagetitle) do %>
    Attendees
  <% end %>

<table class="table table-bordered table-striped table-hover">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @attendees.each do |attendee| %>
      <tr>
        <td><%= attendee.first_name %></td>
        <td><%= attendee.last_name %></td>
        <td><%= attendee.email %></td>
        <td class="text-center"><%= link_to 'Show', attendee, :class => "btn btn-info" %></td>
        <td class="text-center"><%= link_to 'Edit', edit_attendee_path(attendee), :class => "btn btn-warning" %></td>
        <td class="text-center"><%= link_to 'Destroy', attendee, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Attendee', new_attendee_path, :class => "btn btn-lg btn-primary" %>
