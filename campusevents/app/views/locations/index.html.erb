<p id="notice"><%= notice %></p>

  <% content_for(:pagetitle) do %>
    Locations
  <% end %>

<table class="table table-bordered table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Map url</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.name %></td>
        <td><%= location.description %></td>
        <td><%= location.latitude %></td>
        <td><%= location.longitude %></td>
        <td><%= location.map_url %></td>
        <td class="text-center"><%= link_to 'Show', location, :class => "btn btn-info" %></td>
        <td class="text-center"><%= link_to 'Edit', edit_location_path(location), :class => "btn btn-warning" %></td>
        <td class="text-center"><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Location', new_location_path, :class => "btn btn-lg btn-primary" %>
