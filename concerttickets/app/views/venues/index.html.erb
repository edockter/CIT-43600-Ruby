<p id="notice"><%= notice %></p>

<% content_for(:pagetitle) do %>
  All Venues
<% end %>

<div class="col-md-12">
  <table class="table table-responsive table-bordered table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>City</th>
        <th>State</th>
        <th>Zip</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @venues.each do |venue| %>
        <tr>
          <td><%= venue.name %></td>
          <td><%= venue.address %></td>
          <td><%= venue.city %></td>
          <td><%= venue.state %></td>
          <td><%= venue.zip %></td>
          <td class="text-center"><%= link_to 'Show', venue, :class => "btn btn-info" %></td>
          <td class="text-center"><%= link_to 'Edit', edit_venue_path(venue), :class => "btn btn-warning" %></td>
          <td class="text-center"><%= link_to 'Destroy', venue, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br/>
<div class="row">
  <div class="col-md-2">
    <%= link_to 'New Venue', new_venue_path, :class => "btn btn-lg btn-primary" %>
  </div>
</div>
