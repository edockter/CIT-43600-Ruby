<p id="notice"><%= notice %></p>

<% content_for(:pagetitle) do %>
  Registered Users
<% end %>

<div class="col-md-12">
  <table class="table table-responsive table-bordered table-striped table-hover">
    <thead>
      <tr>
        <th>Username</th>
        <th>Email</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.email %></td>

          <% if can? :manage, user %>
            <td class="text-center"><%= link_to 'Show', user, :class => "btn btn-info" %></td>
            <td class="text-center"><%= link_to 'Edit', edit_user_path(user), :class => "btn btn-warning" %></td>
            <td class="text-center"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
          <% end %>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br/>
<div class="row">
  <div class="col-md-2">
    <%= link_to 'New User', new_user_path, :class => "btn btn-lg btn-primary" %>
  </div>
</div>
